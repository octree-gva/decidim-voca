<% add_decidim_page_title(t(".title")) %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t(".title") %>
  </h2>
</div>
<div class="card-section">
  <div class="row column font-semibold pb-4">
    <%= t(".intro") %>
  </div>
  <div class="row column">
    <p><%= t(".info") %></p>
    <pre class="code-block"><%= t(".example") %></pre>
  </div>

  <div class="row column">
    <%= decidim_form_for(@form, url: authorization_path, method: :post) do |form| %>
      <div class="font-semibold">
        <%= form.text_field :code,
                            autofocus: true,
                            label: t("authorizations.new.code", scope: "decidim.voca.code_census") %>
      </div>

      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= form.submit t("authorizations.new.submit", scope: "decidim.voca.code_census"),
                          class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

