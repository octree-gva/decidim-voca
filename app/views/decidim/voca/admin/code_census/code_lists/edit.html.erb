<% add_decidim_page_title(t(".title", count: existing_codes.count)) %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t(".title", count: existing_codes.count) %>
  </h2>
</div>

<div class="card-section">
  <div class="row column">
    <%= decidim_form_for(@form, url: code_list_path, method: :put, html: { class: "form form-defaults" }) do |form| %>
      <div class="font-semibold">
        <%= form.text_area :codes_text,
          rows: 10,
          class: "textarea field",
          label: t("decidim.voca.admin.code_census.code_lists.form.label"),
          help_text: t("decidim.voca.admin.code_census.code_lists.form.help") %>
      </div>

      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= form.submit t("decidim.voca.admin.code_census.code_lists.form.submit"),
                          class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
