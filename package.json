{
  "name": "decidim-voca",
  "private": true,
  "version": "0.0.4",
  "packageManager": "yarn@1.22.22",
  "devDependencies": {
    "@decidim/prettier-config": "^0.29.4",
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "cz-emoji": "^1.3.2-canary.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "scripts": {
    "docs:start": "cd website && yarn start -p 3232",
    "docs:build": "cd website && yarn build",
    "format": "docker compose run -u root -w /home/decidim/module --rm voca bundle exec rubocop -A .",
    "postcommit": "yarn format && yarn docs:build",
    "postversion": "bin/postversion && yarn postcommit"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1"
  }
}
